<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP2.Paginas.CrearDescuentoPage">

    <StackLayout Padding="20">
        <Label Text="Crear Descuento"
               FontSize="24"
               HorizontalOptions="Center"
               Margin="0,20" />

        <Entry x:Name="CodigoEntry" 
               Placeholder="CÃ³digo del descuento" 
               FontSize="18" 
               Margin="0,10" />

        <Entry x:Name="PorcentajeEntry" 
               Placeholder="Porcentaje de descuento" 
               Keyboard="Numeric" 
               FontSize="18" 
               Margin="0,10" />

        <DatePicker x:Name="FechaVencimientoPicker"
                    Date="{Binding FechaVencimiento}"
                    FontSize="18"
                    Margin="0,10" />

        <Button Text="Guardar Descuento"
                Clicked="OnGuardarDescuentoClicked"
                HorizontalOptions="FillAndExpand" />
    </StackLayout>
</ContentPage>
