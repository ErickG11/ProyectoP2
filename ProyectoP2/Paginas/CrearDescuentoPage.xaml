<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP2.Paginas.CrearDescuentoPage"
             Title="Crear Descuento"
             BackgroundColor="#f1f1f1">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Código de Descuento" FontSize="16" />
        <Entry x:Name="CodigoEntry" Placeholder="Ingrese el código de descuento" />

        <Label Text="Porcentaje de Descuento" FontSize="16" />
        <Entry x:Name="PorcentajeEntry" Placeholder="Ingrese el porcentaje" Keyboard="Numeric" />

        <Button Text="Crear Descuento" 
                BackgroundColor="Black" 
                TextColor="White" 
                FontSize="16" 
                Clicked="OnCrearDescuentoClicked" />
    </StackLayout>

</ContentPage>