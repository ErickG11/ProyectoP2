<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP2.Paginas.CrearDescuentoPage"
             Title="Crear Descuento"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Código de Descuento" FontSize="16" />
        <Entry x:Name="CodigoDescuentoEntry" Placeholder="Ingrese un código de descuento" />

        <Label Text="Porcentaje de Descuento" FontSize="16" />
        <Entry x:Name="DescuentoEntry" Keyboard="Numeric" Placeholder="Ingrese el porcentaje" />

        <Button Text="Crear Descuento" 
                FontSize="16" 
                BackgroundColor="Black" 
                TextColor="White" 
                Clicked="OnCrearDescuentoClicked" />
    </StackLayout>

</ContentPage>
