<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP2.Paginas.CrearCategoriaPage"
             Title="Crear Categoría"
             NavigationPage.HasNavigationBar="False">

    <StackLayout Padding="20" Spacing="15">
        <Label Text="Nombre de la Categoría" FontSize="16" />
        <Entry x:Name="CategoriaEntry" Placeholder="Ingrese el nombre de la categoría" />

        <Button Text="Crear Categoría" 
                FontSize="16" 
                BackgroundColor="Black" 
                TextColor="White" 
                Clicked="OnCrearCategoriaClicked" />
    </StackLayout>

</ContentPage>


