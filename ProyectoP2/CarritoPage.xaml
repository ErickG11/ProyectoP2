<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP2.CarritoPage">

    <StackLayout Padding="20">
        <Label Text="Carrito de Compras" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" />

        <CollectionView ItemsSource="{Binding ProductosEnCarrito}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame BorderColor="Gray" CornerRadius="10" Padding="10" Margin="5" BackgroundColor="#F9F9F9">
                        <StackLayout>
                            <Image Source="{Binding ImagenUrl}" HeightRequest="100" HorizontalOptions="Center" />
                            <Label Text="{Binding Nombre}" FontSize="18" TextColor="Black" />
                            <Label Text="{Binding Precio, StringFormat='Precio: {0:C}'}" FontSize="14" TextColor="Green" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Button Text="Vaciar Carrito" 
                FontSize="18" 
                BackgroundColor="Red" 
                TextColor="White" 
                Clicked="OnVaciarCarritoClicked" />

        <Button Text="Finalizar Compra" 
                FontSize="18" 
                BackgroundColor="Green" 
                TextColor="White" 
                Clicked="OnFinalizarCompraClicked" />
    </StackLayout>
</ContentPage>
