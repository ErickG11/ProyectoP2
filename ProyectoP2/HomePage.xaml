<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoP2.HomePage">

    <Grid RowDefinitions="Auto,*,Auto" ColumnDefinitions="*">

        <!-- Título y Logo con fondo blanco -->
        <StackLayout Grid.Row="0" Padding="20,10" BackgroundColor="White">
            <Label Text="Bienvenido a JEB" 
                   FontSize="36" 
                   FontAttributes="Bold" 
                   HorizontalOptions="Center" 
                   TextColor="Black" />
            <Image Source="descarga.jpeg" 
                   Aspect="AspectFit" 
                   HeightRequest="130" 
                   HorizontalOptions="Center" />
        </StackLayout>

        <!-- Productos y Botones -->
        <ScrollView Grid.Row="1">
            <VerticalStackLayout Spacing="20" Padding="15,10" BackgroundColor="#E0F7FA">
                <StackLayout HorizontalOptions="End" 
                             Margin="0,10" 
                             x:Name="AdminStack" 
                             IsVisible="{Binding IsAdministrador}">

                    <Button Text="+ PRODUCTO"
                            FontSize="18"
                            TextColor="Black"
                            BackgroundColor="#4DD0E1"
                            CornerRadius="30"
                            Padding="12"
                            WidthRequest="200"
                            HorizontalOptions="End"
                            Clicked="OnCrearProductoClicked" />

                    <Button Text="+ CATEGORÍA"
                            FontSize="18"
                            TextColor="Black"
                            BackgroundColor="#4DD0E1"
                            CornerRadius="30"
                            Padding="12"
                            WidthRequest="200"
                            HorizontalOptions="End"
                            Clicked="OnCrearCategoriaClicked" />
                </StackLayout>

                <!-- Lista de Productos -->
                <CollectionView ItemsSource="{Binding Productos}" Margin="0,10,0,0">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Frame BorderColor="#4DD0E1" 
                                   CornerRadius="20" 
                                   Padding="10" 
                                   Margin="10" 
                                   BackgroundColor="White" 
                                   HasShadow="True">
                                <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="Auto,*" Margin="0">
                                    <!-- Imagen -->
                                    <Image Source="{Binding ImagenUrl}" 
                                           Aspect="AspectFill" 
                                           HeightRequest="120" 
                                           WidthRequest="120" 
                                           VerticalOptions="Center" 
                                           Grid.RowSpan="4" />

                                    <!-- Información -->
                                    <Label Text="{Binding Nombre}" 
                                           FontSize="18" 
                                           FontAttributes="Bold" 
                                           TextColor="Black" 
                                           Grid.Column="1" 
                                           Margin="10,0,0,0" />
                                    <Label Text="{Binding Descripcion}" 
                                           FontSize="14" 
                                           TextColor="Gray" 
                                           LineBreakMode="WordWrap" 
                                           Grid.Row="1" 
                                           Grid.Column="1" 
                                           Margin="10,0,0,0" />
                                    <Label Text="{Binding Precio, StringFormat='Precio: {0:C}'}" 
                                           FontSize="16" 
                                           FontAttributes="Bold" 
                                           TextColor="#0288D1" 
                                           Grid.Row="2" 
                                           Grid.Column="1" 
                                           Margin="10,5,0,0" />

                                    <!-- Botón Agregar al Carrito -->
                                    <Button Text="Agregar al Carrito" 
                                            FontSize="14" 
                                            BackgroundColor="#4DD0E1" 
                                            TextColor="White" 
                                            CornerRadius="10" 
                                            Padding="5" 
                                            Grid.Row="3" 
                                            Grid.Column="1" 
                                            Margin="10,5,0,0" 
                                            Clicked="OnAgregarAlCarritoClicked" />
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </ScrollView>

        <!-- Barra de Navegación -->
        <Border StrokeShape="RoundRectangle 48"
                StrokeThickness="0"
                HeightRequest="60"
                VerticalOptions="End"
                BackgroundColor="#0288D1"
                Margin="12,24"
                Grid.Row="2">

            <Grid ColumnDefinitions="*,*,*">

                <Button ImageSource="home.png" 
                        BackgroundColor="Transparent" 
                        CornerRadius="30"
                        HeightRequest="50" 
                        WidthRequest="50" 
                        Grid.Column="0"
                        Clicked="OnCartButtonClicked" />

                <Button ImageSource="carrito.png" 
                        BackgroundColor="Transparent" 
                        CornerRadius="30"
                        HeightRequest="50" 
                        WidthRequest="50" 
                        Grid.Column="1"
                        Clicked="OnCartButtonClicked" />

                <Button ImageSource="login.png" 
                        BackgroundColor="Transparent" 
                        CornerRadius="30"
                        HeightRequest="50" 
                        WidthRequest="50" 
                        Grid.Column="2"
                        Clicked="OnLoginButtonClicked" />
            </Grid>
        </Border>
    </Grid>
</ContentPage>
